#!/usr/bin/env bash

#==========================
# bash - find path to script
#==========================
script_abspath=$(cd "${0%/*}" && echo "$PWD/${0##*/}")

# to get the path only - not the script name - add
script_path_only=`dirname "$script_abspath"`

cd "$script_path_only"

function svn_update {
(
	if [[ -d "$1/.svn" ]]; then
		cat <<-MSG
			
			=====================================================
			== Update $1 from sourceforge svn
			=====================================================
			
MSG
		cd "$1"
		svn up
	else
		cat <<-MSG
			
			=====================================================
			== CheckOut $1 from sourceforge svn
			=====================================================
			
MSG
		if [[ -d "$1" ]]; then
			rm -rf "$1" || exit 1
		fi
		svn co https://$1.svn.sourceforge.net/svnroot/$1/trunk/ $1 &&
		cd "$1"
	fi
) || (
cat <<-MSG
	
	!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
	!! Failed update of $1 from sourceforge svn
	!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
	
MSG
exit 1
)
}

function build {
(
	name=$1 ; shift
	cat <<-MSG
		
		=====================================================
		== Build $name ${1:+ with option : $*}
		=====================================================
		
MSG
	cd "$name"
	(ant $* clean jar) ||
	(	cat <<-MSG
			
			!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
			!! Failed build of $name ${1:+ with option : $*}
			!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
			
MSG
		exit 1
	)
)
}

svn_update clojure &&
svn_update clojure-contrib &&
build clojure &&
build clojure-contrib -Dclojure.jar=../clojure/clojure.jar &&
mv -f clojure/clojure.jar . &&
mv -f clojure-contrib/clojure-contrib.jar . &&
cat <<-MSG

	=====================================================
	== Successfully updated Clojure and Clojure-contrib
	=====================================================

MSG